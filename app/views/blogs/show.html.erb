<main role="main" class="container">
	<div class="row">
	  <div class="col-md-8 blog-main">
	    
	    <%= link_to 'Write a New Blog', new_blog_path if logged_in?(:site_admin) %>
	    <hr>

	    <h2><%= @blog.title %></h2>

	    <p><%= @blog.topic.title %></p>

	    <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>

	    <p><%= @blog.body %></p>

	    <%= render 'comments/comment_form' %>
	    
	    <div id="comments" data-blog-id="<%= @blog.id %>">
		  	<%= render @blog.comments %>
			</div>
	  </div>
	  <%= render 'shared/blog_sidebar' %>
	</div>
</main>