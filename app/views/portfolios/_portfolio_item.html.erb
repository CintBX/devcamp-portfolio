<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
    <%= link_to image_tag(portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%'), portfolio_show_path(portfolio_item) %>
    <div class="card-body">
      <p class="card-text">
      	<strong><%= portfolio_item.title %></strong><br> 
      	<i><%= portfolio_item.subtitle %></i>
      </p>
    </div>
  </div>
</div>